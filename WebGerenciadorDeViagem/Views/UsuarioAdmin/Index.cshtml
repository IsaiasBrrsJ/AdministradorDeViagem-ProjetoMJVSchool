@model GerenciadorDeViagem.WEB.Models.Usuario

@{
    ViewData["Title"] = "Consultar Usuario";
}
<style>
    .page-item.active .page-link {
        color: #fff;
        background-color: black;
        border-color: black;
        border-radius: 3px;
    }

    .mensagemNaTela {
        opacity: 1;
        transition: opacity 0.5s ease-out;
    }

    .escondido {
        opacity: 0;
    }
</style>

@{
    var achouUsuario = ViewBag.AchouUsuario;
}


<h1>Administrador</h1>

@if (achouUsuario == GerenciadorDeViagem.WEB.Models.Enum.UsuarioEncontrado.UsuarioNaoEncontrado)
{
    <div class="mensagemUsuario alert alert-info" role="alert">
        <p>Usuario não encontrado, valide a matricula e tente novamente</p>
    </div>
}
else if (achouUsuario == GerenciadorDeViagem.WEB.Models.Enum.UsuarioEncontrado.MatriculaIncorreta)
{
    <div class="mensagemUsuario alert alert-danger" role="alert">
        <p>Erro na matricula, deve ter 6 caracteres, contate o suporte ou tente novamente <strong>Email: </strong><em>suporte@empresa.com</em></p>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form id="formIndex" asp-action="DetalhesUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label">Matriula</label>
                <input id="matriculaId" asp-route-matricula="@Model.Matricula" asp-for="Matricula" class="form-control" placeholder="Informe a matricula para buscar" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <a><button type="submit" value="Buscar" class="btn btn-dark">Buscar Usuario</button></a>
                <a asp-action="CadastrarUsuario" asp-route-pagina="@ViewBag.pagina" asp-route-matricula="@ViewBag.matricula"><button type="button" class="btn btn-dark" onclick="mudarMetodo()">Cadastrar Usuario</button></a>
                <a asp-controller="UsuarioAdmin" asp-action="VoltarPagina" asp-route-pagina="@ViewBag.pagina" asp-route-matricula="@ViewBag.matricula"><button type="button" class="btn btn-info form-control" onclick="mudarMetodo()">Lista de Viagens</button></a>
            </div>
        </form>
    </div>
</div>

<script>
    function mudarMetodo() {
        var form = document.getElementById('formIndex');
        form.method = 'get';
        form.submit();
    }
 
        setTimeout(function () {
            var mensagensTela = document.getElementsByClassName('mensagemUsuario');
            for (var i = 0; i < mensagensTela.length; i++) {
                mensagensTela[i].style.display = 'none';
            }

            for (var i = 0; i < mensagensTela.length; i++) {
                mensagensTela[i].classList.add('escondido');
            }
        }, 4000);

</script>